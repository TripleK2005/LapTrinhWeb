@model IEnumerable<Lab06Validation.Models.Student>

@{
    ViewData["Title"] = "Danh sách sinh viên";
}

<h2>Danh sách sinh viên</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">+ Thêm sinh viên</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Mã SV</th>
            <th>Họ tên</th>
            <th>Email</th>
            <th>Ngành</th>
            <th>Giới tính</th>
            <th>Hệ</th>
            <th>Ngày sinh</th>
            <th>Điểm</th>
            <th>Địa chỉ</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var s in Model)
            {
                <tr>
                    <td>@s.Id</td>
                    <td>@s.Name</td>
                    <td>@s.Email</td>
                    <td>@s.Branch</td>
                    <td>@s.Gender</td>
                    <td>@(s.IsRegular ? "Chính quy" : "Phi chính quy")</td>
                    <td>@s.DateOfBirth.ToString()</td>
                    <td>@s.Score</td>
                    <td>@s.Address</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="9" class="text-center text-muted">Chưa có sinh viên nào</td>
            </tr>
        }
    </tbody>
</table>
