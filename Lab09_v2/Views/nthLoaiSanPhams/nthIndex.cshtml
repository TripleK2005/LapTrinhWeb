@model IEnumerable<Lab09_v2.Models.nthLoaiSanPham>

@{
    ViewData["Title"] = "Danh sách Loại sản phẩm";
}

<div class="card shadow-sm">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Danh sách Loại sản phẩm</h3>
            <a asp-action="nthCreate" class="btn btn-primary">
                <i class="fas fa-plus"></i> Tạo mới
            </a>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-hover table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.First().nthMaLoai)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().nthTenLoai)
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.First().nthTrangThai)
                    </th>
                    <th class="text-center" style="width: 150px;">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.nthMaLoai)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.nthTenLoai)
                        </td>
                        <td class="text-center">
                            @if (item.nthTrangThai)
                            {
                                <span class="badge bg-success">Hoạt động</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Không hoạt động</span>
                            }
                        </td>
                        <td class="text-center">
                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-action="nthEdit" asp-route-id="@item.nthId" class="btn btn-outline-primary" title="Sửa">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                                <a asp-action="nthDetails" asp-route-id="@item.nthId" class="btn btn-outline-info" title="Chi tiết">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                                <a asp-action="nthDelete" asp-route-id="@item.nthId" class="btn btn-outline-danger" title="Xóa">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>