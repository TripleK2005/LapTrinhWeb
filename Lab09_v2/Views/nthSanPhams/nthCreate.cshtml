@model Lab09_v2.Models.nthSanPham

@{
    ViewData["Title"] = "Tạo mới Sản phẩm";
}

<div class="row justify-content-center">
    <div class="col-md-9">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">@ViewData["Title"]</h3>
            </div>
            <div class="card-body">
                <form asp-action="nthCreate" enctype="multipart/form-data">
                    @* Chỉ cần một dòng validation summary là đủ *@
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        @* Cột bên trái cho hình ảnh *@
                        <div class="col-md-4 text-center">
                            <label class="form-label">Xem trước hình ảnh</label>
                            <img id="imagePreview" src="~/images/placeholder.png" class="img-fluid rounded shadow-sm mb-2" alt="Hình ảnh sản phẩm" style="max-height: 250px;" />
                            <div class="mb-3">
                                <label for="imageFile" class="form-label">Chọn ảnh đại diện</label>
                                <input type="file" name="imageFile" id="imageFile" class="form-control form-control-sm" />
                            </div>
                        </div>

                        @* Cột bên phải cho thông tin *@
                        <div class="col-md-8">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="nthMaSanPham" class="form-label"></label>
                                    <input asp-for="nthMaSanPham" class="form-control" />
                                    <span asp-validation-for="nthMaSanPham" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="nthTenSanPham" class="form-label"></label>
                                    <input asp-for="nthTenSanPham" class="form-control" />
                                    <span asp-validation-for="nthTenSanPham" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label asp-for="nthLoaiId" class="form-label"></label>
                                <select asp-for="nthLoaiId" class="form-select" asp-items="ViewBag.nthLoaiId">
                                    <option value="">-- Chọn loại sản phẩm --</option>
                                </select>
                                <span asp-validation-for="nthLoaiId" class="text-danger"></span>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="nthSoLuong" class="form-label"></label>
                                    <input asp-for="nthSoLuong" class="form-control" />
                                    <span asp-validation-for="nthSoLuong" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="nthDonGia" class="form-label"></label>
                                    <input asp-for="nthDonGia" class="form-control" />
                                    <span asp-validation-for="nthDonGia" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr />

                    <div class="d-flex justify-content-between">
                        <a asp-action="nthIndex" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Hủy
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Tạo mới
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Script để xem trước ảnh được chọn
        document.getElementById('imageFile').addEventListener('change', function(event) {
            const [file] = event.target.files;
            if (file) {
                document.getElementById('imagePreview').src = URL.createObjectURL(file);
            }
        });
    </script>
}