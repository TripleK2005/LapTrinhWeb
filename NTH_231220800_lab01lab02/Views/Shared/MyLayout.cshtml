<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Student Management</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="~/css/style.css" />
    @RenderSection("Scripts", required: false)

</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Management System</a>

            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a asp-controller="Student" asp-action="Index" class="nav-link"><i class="bi bi-people"></i> Students</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Student" asp-action="Create" class="nav-link"><i class="bi bi-plus-circle"></i> Create Student</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <footer>
        © @DateTime.Now.Year - Student App
    </footer>

</body>
</html>
