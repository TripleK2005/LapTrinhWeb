@model IEnumerable<Student>

@{
    ViewData["Title"] = "Student List";
    Layout = "~/Views/Shared/MyLayout.cshtml"; // hoặc MyLayoutHelper nếu bạn dùng ViewComponent
}

<a asp-action="Create" class="btn btn-primary mb-3">Create Student</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Mã</th>
            <th>Họ tên</th>
            <th>Ngày sinh</th>
            <th>Ngành</th>
            <th>Giới tính</th>
            <th>Hệ đào tạo</th>
            <th>Địa chỉ</th>
            <th>Email</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.DateOfBirth?.ToString("dd/MM/yyyy")</td>
                <td>@student.Branch</td>
                <td>@(student.Gender == Gender.Male ? "Nam" : "Nữ")</td>
                <td>@(student.isRegular == true ? "Chính quy" : "Phi chính quy")</td>
                <td>@student.Address</td>
                <td>@student.Email</td>
            </tr>
        }
    </tbody>
</table>
